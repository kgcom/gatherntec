<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:fillViewport="true"
     android:background="@android:color/background_dark">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >
    <!-- tools:context="com.example.gather.MainActivity"  -->
    
	
    <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    </android.support.v4.view.ViewPager>

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personName"
        android:layout_below="@+id/personName"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="phone"
       	android:padding="10dp"
       	android:enabled="false"
        android:textColor="@android:color/darker_gray" 
        android:background="@android:color/white"
        android:hint="mobile"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:inputType="textPersonName"
       android:padding="10dp"
        android:textColor="@color/text_color" 
        android:background="@android:color/white"
        android:hint="full name"
        android:enabled="false"
        android:visibility="invisible" >

        <requestFocus />
    </EditText>

    <TextView
          android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneNumber"
        android:layout_below="@+id/personName"
        android:layout_marginTop="14dp"
        android:text="Mobile"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"/>

    <TextView
       android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/personName"
        android:layout_alignLeft="@+id/personName"
        android:layout_marginBottom="35dp"
        android:text="Name"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceSmall"
         android:visibility="invisible" />

    <TextView
     android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eMail"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="18dp"
        android:text="E-mail"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceSmall" 
         android:visibility="invisible"/>

    <Button
        android:id="@+id/write"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eMail"
        android:layout_alignRight="@+id/eMail"
        android:layout_below="@+id/eMail"
        android:layout_marginTop="17dp"
        android:background="@color/btn_color"
        android:text="Write"
        android:textColor="@color/bg_blue"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/eMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneNumber"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="textEmailAddress"
       android:padding="10dp"
        android:textColor="@color/text_color" 
        android:background="@android:color/white"
        android:hint="email"
        android:enabled="false"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:ems="10"
       	android:visibility="invisible"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personName"
        android:layout_alignTop="@+id/textView4"
        android:layout_toLeftOf="@+id/textView4"
        android:background="@color/btn_color"
        android:ems="10"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/personName"
        android:layout_alignTop="@+id/textView4"
        android:background="@android:color/white"
        android:padding="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />
		
</RelativeLayout>
</ScrollView><!-- From: file:/C:/Users/Kee/AndroidStudioProjects/GatherThisIsItv2/app/src/main/res/layout/activity_main.xml -->